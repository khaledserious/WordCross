<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvQuestion"
        android:layout_marginTop="57dp"
        android:text="........"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:textSize="22dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivQuestion"
        android:visibility="visible"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:background="#845422"
        android:id="@+id/btn1"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:id="@+id/btn2"
        android:background="#845422"
        android:textSize="22dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignRight="@+id/btn3"
        android:layout_alignEnd="@+id/btn3" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:id="@+id/btn3"
        android:textSize="22dp"
        android:textColor="#000000"
        android:background="#845422"
        android:textAlignment="center"
        android:layout_alignTop="@+id/btn2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:id="@+id/btn4"
        android:textAlignment="center"
        android:singleLine="true"
        android:background="#845422"
        android:textColor="#000000"
        android:textSize="22dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />





    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="F"
        android:onClick="letterClicked"
        android:id="@+id/btn1"
        android:layout_marginBottom="132dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="letterClicked"
        android:text="M"
        android:id="@+id/btn4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="R"
        android:id="@+id/btn2"
        android:onClick="letterClicked"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="O"
        android:id="@+id/btn3"
        android:onClick="letterClicked"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="D"
        android:onClick="letterClicked"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="T"
        android:onClick="letterClicked"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="S"
        android:id="@+id/textView7"
        android:onClick="letterClicked"
        android:layout_below="@+id/btn2"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="E"
        android:onClick="letterClicked"
        android:id="@+id/btn8"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="A"
        android:id="@+id/btn9"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="K"
        android:id="@+id/textView10"
        android:onClick="letterClicked"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toLeftOf="@+id/btn6"
        android:layout_toStartOf="@+id/btn6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="G"
        android:onClick="letterClicked"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/btn9"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="letterClicked"
        android:text="Z"
        android:id="@+id/textView12"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="#845422"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn5"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_alignTop="@+id/btn4"
        android:background="#845422"
        android:layout_alignRight="@+id/tvQuestion"
        android:layout_alignEnd="@+id/tvQuestion"
        android:onClick="onClick" />


</RelativeLayout>